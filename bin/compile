#! /usr/bin/env bash
set -eo pipefail

BUILD_DIR="$1"
CACHE_DIR="$2"
ENV_DIR="$3"

function log {
    echo "-----> $1"
}

log "testing cmake..."
log "$(ls ~/.apt/usr/share/cmake-*)"

log "Downloading drogon..."
cd "$CACHE_DIR"
git clone https://github.com/an-tao/drogon
cd drogon
git submodule update --init
mkdir build
cd build
log "Preparing drogon..."
cmake ..
log "Compiling drogon..."
make -j"$(nproc)"
log "Installing drogon..."
make install

log "Compiling program..."
cd "$BUILD_DIR"
mkdir build
cd build
qmake ..
make -j"$(nproc)"
